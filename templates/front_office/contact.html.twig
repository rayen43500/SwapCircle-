{% extends 'sub-base.html.twig' %}

{% block title %}
    Contact
{% endblock %}

{% block body %}
<section class="service_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Nous <span>Contacter</span></h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="box">
                    <div class="detail-box">
                        <h4>Informations de contact</h4>
                        <p class="mt-3">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <strong>Adresse :</strong><br>
                            123 Rue de l'Échange<br>
                            75000 Paris, France
                        </p>
                        <p>
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <strong>Téléphone :</strong><br>
                            +33 1 23 45 67 89
                        </p>
                        <p>
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <strong>Email :</strong><br>
                            contact@swapcircle.com
                        </p>
                        <p>
                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                            <strong>Horaires :</strong><br>
                            Lundi - Vendredi : 9h00 - 18h00<br>
                            Samedi : 10h00 - 16h00
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box">
                    <div class="detail-box">
                        <h4>Envoyez-nous un message</h4>
                        <form class="mt-3">
                            <div class="form-group">
                                <label for="nom">Nom complet</label>
                                <input type="text" class="form-control" id="nom" name="nom" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="sujet">Sujet</label>
                                <input type="text" class="form-control" id="sujet" name="sujet" required>
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            <div class="btn-box">
                                <button type="submit" class="btn btn-primary">Envoyer le message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="contact_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="map_container">
                    <div class="map">
                        <div id="googleMap" style="width:100%;height:400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Map Section -->

<!-- Google Map -->
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>
<!-- End Google Map -->

{% endblock %}

